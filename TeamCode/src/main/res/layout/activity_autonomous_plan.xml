<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.firstinspires.ftc.teamcode.AutonomousPlanActivity">

    <TextView
        android:id="@+id/settings_start_delay_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start delay" />

    <Spinner
        android:id="@+id/settings_start_delay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_start_delay_label"></Spinner>

    <TextView
        android:id="@+id/settings_shoot_mode_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shoot mode"
        android:layout_below="@+id/settings_start_delay"/>

    <Spinner
        android:id="@+id/settings_shoot_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_shoot_mode_label"></Spinner>

    <TextView
        android:id="@+id/settings_beacon_mode_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Beacon mode"
        android:layout_below="@+id/settings_shoot_mode"/>

    <Spinner
        android:id="@+id/settings_beacon_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_beacon_mode_label"></Spinner>

    <CheckBox
        android:id="@+id/settings_cap_ball"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get cap ball"
        android:checked="true"
        android:layout_below="@+id/settings_beacon_mode"/>

    <CheckBox
        android:id="@+id/settings_longer_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Longer start movement"
        android:checked="true"
        android:layout_below="@+id/settings_cap_ball"/>

    <TextView
        android:id="@+id/settings_config_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_longer_start"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/settings_estimated_points"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_config_info"
        android:textSize="16sp"/>
</RelativeLayout>
